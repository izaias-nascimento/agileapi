{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "standard"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "@typescript-eslint/no-unused-vars": [
            "error",
            { "argsIgnorePattern": "_" }
          ],
          "@typescript-eslint/no-use-before-define": [
            "error",
            {
                "functions": true,
                "classes": true,
                "variables": true,
                "allowNamedExports": false
            }
          ]     
    
    }
}
